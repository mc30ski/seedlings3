{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/start.ts",
    "build": "tsup --config tsup.config.ts && prisma generate",
    "start": "node --enable-source-maps dist/start.js",
